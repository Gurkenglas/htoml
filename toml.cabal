name:       toml
version:    0.0.0
cabal-version: >= 1.2
build-type: Simple
description:
    Whiskey-driven YAML replacement.

library
    hs-source-dirs: src
    build-depends:
        base >= 4 && < 5,
        attoparsec >= 0.10 && < 0.11,
        containers >= 0.4 && < 0.5,
        bytestring >= 0.9 && < 1.0,
        time -any

    exposed-modules:
        Text.TOML
        Text.TOML.Parser
        Text.TOML.Value
